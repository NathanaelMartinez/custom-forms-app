{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                        
    "strict": true,                              
    "esModuleInterop": true,                     // allows interoperability with CommonJS
    "experimentalDecorators": true,              // enables decorators
    "emitDecoratorMetadata": true,               // enables metadata reflection for decorators
    "skipLibCheck": true,                        
    "outDir": "./dist",                          
    "rootDir": "./src"                           
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
